<!DOCTYPE html>
<html>
	<head>
	  <title><%= gen_title(yield(:title))%></title>
	  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
	  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	  <%= csrf_meta_tags %>
	  <%= render 'layouts/shim' %>
	</head>
	<body class='<%= yield(:body_class) %>'>
		<div class="container">
			
			<%= yield %>
			<div>
				<%= debug(params) if Rails.env.development? %>
				<%= "#{request.ip}<hr>" if Rails.env.development?%>
				<%= "#{session.inspect}<hr>" if false && Rails.env.development? %>
				<%= request.env if false && Rails.env.development? %>
			</div>
		</div>
		<div class="footer">
			<script type="text/javascript">
				tables = document.getElementsByClassName("table")
				new FixedHeader( tables[0] );
				new FixedHeader( tables[1] );
			</script>
		</div>
	</body>
</html>
